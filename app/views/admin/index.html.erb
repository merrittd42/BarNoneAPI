<h1> Listing Bars </h1>

<table>
  <tr>
    <th>ID</th>
      <th>Name</th>
      <th>Edit</th>
    </tr>

    <%@bars.each do |bar| %>
    <tr>
      <td><%= bar.id %></td>
      <td><%= bar.name %></td>
      <td><a href="/admin/update/<%= bar.id %>">Edit</a></td>
      <td><%= link_to "delete", bar, method: :delete, data: {confirm: "You wanna?:"} %></td>
    </tr>
    <%end%>
  </table>

  <br>

  <a href="/admin/new/"> New Bar </a>
